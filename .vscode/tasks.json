{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "app-to-dist",
            "type": "gulp",
            "group": "build",
            "task": "app-to-dist",
            "problemMatcher": [
                "$gulp-tsc"
            ]
        },
        {
            "label": "espurino-prepare",
            "group": "build",
            "type": "shell",
            "presentation": {
                "reveal": "never"
            },
            "command": "espruino --board ESP32 app.js -o bundle.js",
            "options": {
                "cwd": "${cwd}\\dist"
            },
            "problemMatcher": []
        },
        {
            "label": "espurino-console",
            "type": "shell",
            "command": "espruino --board ESP32 -b 115200 --color --port COM3 -w ${cwd}\\dist\\bundle.js",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            }
        }
    ]
}